
var sortedSquares = function(nums) {

    let start = 0;
    let end = nums.length - 1;
    let result = []
    let i = nums.length - 1;
    while(start <= end){
        if(nums[start]**2 > nums[end]**2){
            result[i] = nums[start] ** 2
            start++;
            i--
        } else {
            result[i] = nums[end] ** 2
            end--
            i--
        }
    };
    console.log(result);
    return result
}

// 1. as the array is already sorted and also contains the negative numbers this means start or the end of the array can be greater element so we can use the two pointer technique solve this problem.
// 2. square the emelent from the start and end of the element and then push the element into the result whichever is he greater element.
